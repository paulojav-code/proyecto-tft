---
interface Props {
    titulo:string;
	media: string;
    text: string;
    type?: string;
}

const { titulo,media,text,type } = Astro.props;
---
<section class=`box ${type}`>
    <div class="content">
        <h1>{titulo}</h1>
        <p set:html={text} />
    </div>
    <div class="media" set:html={media} />
</section>
<style>
    .box{
        margin-top: 7em;
        width:100%;
		display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        & .media{
            position: relative;
            width: 55%;
            order: 2;
            text-align: center;
            .img{
                height: 25em;
                width: 70%;
            }
        }
        & .content{
            width: 45%;
            padding: 1em;
            order: 1; 
            .left &{
                order: 3;
            }
        }
        h1 {
            width: 100%;
            color: white;
            font-size: 3em;
            font-weight: 700;
            line-height: 1;
            text-align: center;
            margin-bottom: 1em;
        }
        p{
            text-align: justify;
            color:#88a0a7 ;
        }
        @media screen and (max-width: 736px){
            & > * {
                width: 100% !important;
                order: 1 !important;
                flex-direction: column;
            }
        }
        
	}
</style>