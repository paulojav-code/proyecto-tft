---
import Layout from '../layouts/Layout.astro';                                                                       
import Header from '../components/Header.astro';
---

<Layout title="Welcome to TFT.">
	<main>
		<h1>Welcome to <span class="text-gradient">TFT GUIDE </span></h1>
		<Header>
			<p>Set 11 tft</p>
		</Header> 
		<p>Hola a todos</p>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1em;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	h1 {
		font-size: 3em;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

</style>
